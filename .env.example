# News Poster Environment Variables

# API Keys
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# AT Protocol (BlueSky) Authentication
AT_PROTOCOL_USERNAME=your_bluesky_username_here
AT_PROTOCOL_PASSWORD=your_bluesky_password_here

# Platform Configuration
# Enable or disable posting to specific platforms
# Set to 'true' to enable, 'false' to disable
ENABLE_BLUESKY=true
ENABLE_TWITTER=false  # Enable when Twitter API credentials are configured

# Twitter API Authentication (Optional - only needed if ENABLE_TWITTER=true)
# Obtain credentials from https://developer.twitter.com/
# TWITTER_API_KEY=your_twitter_api_key_here
# TWITTER_API_KEY_SECRET=your_twitter_api_key_secret_here
# TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
# TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here
# TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Database Configuration
server=your_db_server_here
db=your_db_name_here
user=your_db_username_here
pwd=your_db_password_here

# Application Settings
MAX_HISTORY_LINES=100
CLEANUP_THRESHOLD=10 